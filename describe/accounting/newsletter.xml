<xml>
   <Table System="accounting" name="News Letters" Icon="news">
      <Field Caption="Number" Strict="1" Size="4" Type="2" AutoCounter="1" name="number" Modify="1"/>
      <Field Caption="Date" Size="4" Type="5" Force="1" name="date"/>
      <Field Size="50" Force="1"/>
      <Field Caption="Subject" Size="50" name="subject"/>
      <Field Caption="Group" File="accounting.group" Size="2" Type="2" name="group"/>
      <Field Caption="Area" File="accounting.area" Size="2" Type="2" name="area"/>
      <Field Caption="Category" File="accounting.category" Size="2" Type="2" name="category"/>
      <Field Caption="Communication (email)" Size="1" Type="2" Format="b" name="comm"/>
	  <Field Caption="Email body" File="system.emailbody" Size="2" Type="2" name="emailbody"/>
      <Field Caption="Count" Strict="1" Size="2" Type="2" name="count" Modify="1"/>
      <Field Caption="Sent" Size="8" Type="5" Strict="1" Modify="1" name="sent"/>
      <Field Caption="Modified" Hide="1" System="1" Size="8" Type="5" name="@modify_stamp"/>
      <Index name="newsletter">
         <IndexEntry name="number"/>
      </Index>
      <Index name="newsletter[date]">
         <IndexEntry name="date"/>
         <IndexEntry name="number"/>
      </Index>
      <Index name="newsletter[area]">
         <IndexEntry name="area"/>
         <IndexEntry name="number"/>
      </Index>
      <Index name="newsletter[category]">
         <IndexEntry name="category"/>
         <IndexEntry name="number"/>
      </Index>
      <Index name="newsletter[group]">
         <IndexEntry name="group"/>
         <IndexEntry name="number"/>
      </Index>
   </Table>
</xml>
